        <Label x:Name="lblEventDate" Content="" HorizontalAlignment="Left" Margin="10,160,0,0" VerticalAlignment="Top" Width="90"/>
        <Label Content="Tid" HorizontalAlignment="Left" Margin="10,191,0,0" VerticalAlignment="Top" Width="90" FontWeight="Bold"/>
        <Label x:Name="lblEventTime" Content="" HorizontalAlignment="Left" Margin="10,222,0,0" VerticalAlignment="Top" Width="90"/>
        <RadioButton x:Name="rbEventPublic" Content="Offentlig" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,262,0,0" FontWeight="Bold"/>
        <RadioButton x:Name="rbEventPrivate" Content="Privat" HorizontalAlignment="Left" Margin="10,292,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
